<body>
    {{> _navbar}}
    <div class="container">
        {{#if error}}
        <div class="alert alert-danger mt-3"> <a href="#" class="close" data-dismiss="alert">&times;</a>
            {{error}}
        </div>
        {{/if}}

        {{#each errors}}
        <div class="alert alert-danger mt-3"> <a href="#" class="close" data-dismiss="alert">&times;</a>
            {{text}}</div>
        {{/each}}

        {{#if success_msg}}
        <div class="alert alert-success mt-3"> <a href="#" class="close" data-dismiss="alert">&times;</a>
            {{success_msg}}</div>
        {{/if}}

        {{#if error_msg}}
        <div class="alert alert-danger mt-3"> <a href="#" class="close" data-dismiss="alert">&times; </a>
            {{error_msg}} </div>
        {{/if}}
        
    </div>
    {{{body}}}

</body>

